<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="أنشاء مفتاح تفعيل"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textColor="@android:color/holo_purple"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxtGeneratorKey"
        android:hint="ادخل مفتاح التوليد هنا"
        android:layout_marginTop="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etxtNoOfLicenses"
        android:hint="ادخل عدد المفاتيح"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:maxLength="3"/>

    <Button
        android:id="@+id/btnGenerateKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="انشاء"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:id="@+id/txtActivationKey"
        android:textColor="@android:color/holo_green_light"
        android:hint="مفتاح التفعيل"
        android:gravity="center"/>

</LinearLayout>